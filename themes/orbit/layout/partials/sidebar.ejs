<div class="sidebar">
    <ul class="main-menu">
        <%- partial('partials/main_menu', { context: 'sidebar' }) %>
    </ul>
    <div class="list">
        <h2>
            Guide
            <select class="version-select">
                <% config.versions.all.forEach(function(v) { %>
                <option value="<%- v %>" <%= page.version == v ? 'selected' : null %> >v<%- v %></option>
                <% }) %>
            </select>
        </h2>
        <div id="donate" style="margin-bottom: 20px">
            <img src="/images/paypal.png">
            <a href="/sponsor">Sponsor Orbit.js</a>
        </div>
        <ul class="menu-root">
            <% version = page.version %>
            <% search = (version === null ? {type: type} : {type: type, version: version} ) %>
            <% type !== 'api' && site.pages.find(search).sort('order').each(function (p) { %>
                <% var fileName = p.path.replace(/^.+?\/([\w-]+)\.html/, '$1') %>
                <li>
                    <a href="/<%- p.path %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %>"><%- p.title %></a>
                </li>
            <% }) %>
        </ul>
    </div>
</div>
